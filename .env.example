# ===================================
# Polymarket-Kalshi Arbitrage Bot
# Copy to .env and fill in values
# ===================================

# --- Trading Credentials ---
KALSHI_API_KEY=
KALSHI_PRIVATE_KEY_PATH=
POLYMARKET_PRIVATE_KEY=

# --- Security ---
KILL_SWITCH_TOKEN=         # Bearer token for kill switch API (generate a strong random token)
DB_PATH=data/arbitrage_bot.db

# --- Trading Parameters ---
DRY_RUN=True
MAX_SINGLE_TRADE_USD=50.0
MAX_TOTAL_EXPOSURE_USD=500.0
MAX_DAILY_LOSS_USD=100.0
MAX_TRADES_PER_HOUR=20
MIN_NET_MARGIN=0.02

# --- Fee Configuration ---
KALSHI_FEE_PER_CONTRACT=0.03
POLYMARKET_GAS_COST=0.002
SLIPPAGE_BUFFER=0.005

# --- Server ---
API_HOST=127.0.0.1
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000"]
POLLING_INTERVAL_SEC=1.0

# --- Monitoring & Alerts (Sprint 6) ---
TELEGRAM_BOT_TOKEN=        # Telegram bot token (leave empty to disable)
TELEGRAM_CHAT_ID=           # Telegram chat ID for alerts
LOG_FORMAT=text             # "text" or "json" (use "json" in production/Docker)
ENVIRONMENT=development     # "development", "staging", "production"
